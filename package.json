{
  "name": "garou",
  "version": "0.3.3",
  "description": "Do thing what heroes didn't do",
  "license": "MIT",
  "author": {
    "name": "Eric Chen",
    "email": "airkro@qq.com"
  },
  "keywords": [
    "css",
    "eslint",
    "format",
    "formatter",
    "garou",
    "html",
    "javascript",
    "markdown",
    "nice-move",
    "prettier",
    "react",
    "scss",
    "sort",
    "styleguide",
    "stylelint",
    "typescript",
    "vue"
  ],
  "homepage": "https://www.npmjs.com/package/garou",
  "repository": {
    "type": "git",
    "url": "https://github.com/nice-move/garou.git"
  },
  "bugs": {
    "url": "https://github.com/nice-move/garou/issues"
  },
  "bin": {
    "garou": "dist/cli.cjs"
  },
  "main": "dist/cli.cjs",
  "files": [
    "dist"
  ],
  "type": "module",
  "scripts": {
    "prebuild": "node config/patch.mjs",
    "build": "microbundle --no-sourcemap --strict -f cjs --target node --compress",
    "garou": "node lib/cli.mjs",
    "lint": "nice-move lint",
    "prepare": "git config core.hooksPath .githooks",
    "prepublishOnly": "npm run lint && npm run build && npm test",
    "test": "ava --fail-fast -v -- --build",
    "test:dev": "ava --fail-fast -v"
  },
  "dependencies": {
    "@typescript-eslint/parser": "^5.5.0",
    "eslint-plugin-html": "^6.2.0",
    "espree": "^9.1.0",
    "jsx-ast-utils": "^3.2.1",
    "postcss-html": "^1.3.0",
    "postcss-markdown": "^1.2.0"
  },
  "devDependencies": {
    "@nice-move/cli": "^0.6.0",
    "@nice-move/commitlint-config": "^0.4.0",
    "@nice-move/eslint-config-base": "^0.5.73",
    "@nice-move/prettier-config": "^0.5.1",
    "@nice-move/stylelint-config": "^0.6.11",
    "ava": "^3.15.0",
    "cheetor": "^0.12.2",
    "commitlint": "^15.0.0",
    "eslint": "^7.32.0",
    "eslint-plugin-ava": "^13.1.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-markdown": "^2.2.1",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sort-class-members": "^1.14.0",
    "eslint-plugin-vue": "^8.1.1",
    "fs-chain": "^8.1.1",
    "globby": "^11.0.4",
    "microbundle": "^0.14.2",
    "postcss": "^8.4.4",
    "postcss-less": "^5.0.0",
    "postcss-scss": "^4.0.2",
    "prettier": "^2.5.0",
    "rehype": "^12.0.0",
    "rehype-sort-attributes": "^4.0.0",
    "settingz": "^0.1.2",
    "slash": "^4.0.0",
    "stylelint": "^14.1.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.0.0",
    "typescript": "^4.5.2"
  },
  "peerDependencies": {
    "eslint": "^7.32.0",
    "typescript": "^4.5.2"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "engines": {
    "node": "^14.17.0 || >=16.13.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "browserslist": [
    "node 14.17"
  ],
  "commitlint": {
    "extends": "@nice-move/commitlint-config"
  },
  "eslintConfig": {
    "extends": "@nice-move/eslint-config-base",
    "rules": {
      "import/no-extraneous-dependencies": 0
    }
  },
  "nice-move": {
    "ignore": {
      "all": [
        "test/fixture/**"
      ]
    }
  },
  "prettier": "@nice-move/prettier-config",
  "source": "lib/cli.mjs",
  "stylelint": {
    "extends": "@nice-move/stylelint-config"
  }
}